@page
@model HES.Web.Pages.Computers.IndexModel

@{
    ViewData["Title"] = "Computers";
    ViewData["ActivePage"] = MenuNavPages.Computers;
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].ClientVersion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].OS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].IP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].LastSeen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Approved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Computer[0].Department)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Computer)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientVersion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OS)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastSeen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Approved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Id)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
