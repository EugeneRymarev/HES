@model HES.Web.Pages.Computers.IndexModel

<h5 class="text-gray mb-4 ">You want to approve computer @Model.Computer.Name?</h5>

<form method="post" class="text-right">
    <input type="hidden" asp-for="Computer.Id" name="computerId" />
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <input type="submit" value="Ok" class="btn btn-primary" asp-page-handler="ApproveComputer" />
</form>