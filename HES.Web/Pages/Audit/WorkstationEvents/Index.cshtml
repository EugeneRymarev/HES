@page
@model HES.Web.Pages.Audit.WorkstationEvents.IndexModel

@{
    ViewData["Title"] = "Events";
    ViewData["ActivePage"] = MenuNavPages.Audit;
    ViewData["AuditPage"] = AuditNavPages.WorkstationEvents;
}

<div class="row align-items-center mr-0">
    <div class="col">
        <h1 class="text-navyblue">Filter</h1>
    </div>
</div>

<div class="filter-card">
    <form method="post" id="filterForm">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.StartDate" class="control-label"></label>
                <input readonly type="text" id="startDate" asp-for="WorkstationEventFilter.StartDate" class="form-control" autocomplete="off" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.EndDate" class="control-label"></label>
                <input readonly type="text" id="endDate" asp-for="WorkstationEventFilter.EndDate" class="form-control" autocomplete="off" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.EventId" class="control-label"></label>
                <select id="eventId" asp-for="WorkstationEventFilter.EventId" class="form-control" asp-items="ViewBag.Events">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.SeverityId" class="control-label"></label>
                <select id="severityId" asp-for="WorkstationEventFilter.SeverityId" class="form-control" asp-items="ViewBag.Severity">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.Note" class="control-label"></label>
                <input id="note" asp-for="WorkstationEventFilter.Note" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.WorkstationId" class="control-label"></label>
                <select id="workstationId" asp-for="WorkstationEventFilter.WorkstationId" class="form-control" asp-items="ViewBag.Workstations">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.UserSession" class="control-label"></label>
                <input id="userSession" asp-for="WorkstationEventFilter.UserSession" class="form-control" />
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.DeviceId" class="control-label"></label>
                <select id="deviceId" asp-for="WorkstationEventFilter.DeviceId" class="form-control" asp-items="ViewBag.Devices">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.EmployeeId" class="control-label"></label>
                <select id="employeeId" asp-for="WorkstationEventFilter.EmployeeId" class="form-control" asp-items="ViewBag.Employees">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.CompanyId" class="control-label"></label>
                <select id="companyId" asp-for="WorkstationEventFilter.CompanyId" class="form-control" asp-items="ViewBag.Companies">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.DepartmentId" class="control-label"></label>
                <select id="departmentId" asp-for="WorkstationEventFilter.DepartmentId" class="form-control" asp-items="ViewBag.Departments">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.DeviceAccountId" class="control-label"></label>
                <select id="deviceAccountId" asp-for="WorkstationEventFilter.DeviceAccountId" class="form-control" asp-items="ViewBag.DeviceAccounts">
                    <option selected></option>
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 form-group">
                <label asp-for="WorkstationEventFilter.DeviceAccountTypeId" class="control-label"></label>
                <select id="deviceAccountTypeId" asp-for="WorkstationEventFilter.DeviceAccountTypeId" class="form-control" asp-items="ViewBag.DeviceAccountTypes">
                    <option selected></option>
                </select>
            </div>
            <div class="col align-self-end form-group text-right">
                <div>
                    <button id="clearFilter" type="button" class="btn btn-secondary">Clear</button>
                    <input id="filterBtn" type="submit" value="Filter" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </form>
</div>

<div id="content">
    @* Top table items *@
    <div class="row align-items-center mr-0">
        <div class="col-auto">
            <h1 class="text-navyblue">Workstation Events</h1>
        </div>
        <div class="col" id="loading"></div>
        <div class="col-auto p-1">
            <div class="form-group has-search-right m-0">
                <div class="form-control-feedback">
                    <img class="img-size" src="~/svg/action/search.svg" />
                </div>
                <input id="searchbox" type="text" class="form-control" placeholder="Search">
            </div>
        </div>
    </div>

    <table id="workstationEvents" class="display table table-hover border rounded w-100">
        <thead>
            <tr>
                <th data-priority="1">
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].EventId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].SeverityId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].Note)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].Workstation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].UserSession)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].Device)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].Employee)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].Department.Company)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].DeviceAccount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WorkstationEvents[0].DeviceAccount.Type)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.WorkstationEvents)
            {
                <tr>
                    <td>
                        @TimeZoneInfo.ConvertTimeFromUtc((DateTime)item.Date, TimeZoneInfo.Local).ToString("g")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EventId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SeverityId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Note)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Workstation.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserSession)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Device.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Company.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeviceAccount.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeviceAccount.Type)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @* Bottom table items *@
    <div class="row mt-2">
        <div class="col d-flex justify-content-center justify-content-lg-start align-items-center mb-1 text-nowrap">
            <span class="d-flex align-items-center mr-1 text-navyblue">Show entries</span>
            <div id="entries_place"></div>
        </div>
        <div id="showing_place" class="col d-flex justify-content-center align-items-center mb-1 text-navyblue text-nowrap"></div>
        <div id="pagination_place" class="col d-flex justify-content-center justify-content-lg-end align-items-center mb-1"></div>
    </div>
</div>

@section Scripts{
    <script>
        // DatePicker
        $('#startDate').datepicker({
            format: '@ViewBag.DatePattern',
            uiLibrary: 'bootstrap4',
            maxDate: function () {
                return $('#endDate').val();
            }
        });
        $('#endDate').datepicker({
            format: '@ViewBag.DatePattern',
            uiLibrary: 'bootstrap4',
            minDate: function () {
                return $('#startDate').val();
            }
        });

        // Init DataTables
        var table_name = '#workstationEvents';
        var table = $(table_name).DataTable({
            responsive: true,
            "order": [[0, "desc"]]
        });
        var dataTable = $(table_name).dataTable();
        // Search box
        $('#searchbox').keyup(function () {
            dataTable.fnFilter(this.value);
        });
        $('.dataTables_filter').addClass('d-none');
        // Length
        $('#entries_place').html($('.dataTables_length select').removeClass('custom-select-sm form-control-sm'));
        $('.dataTables_length').addClass('d-none');
        // Info
        $('#showing_place').html($('.dataTables_info'));
        // Paginate
        $('#pagination_place').html($('.dataTables_paginate'));

        // Filter
        $(document).on('submit', '#filterForm', function (e) {
            e.preventDefault();
            $('#loading').html("<div class='spinner-border text-primary' role='status'></div>");
            $.ajax({
                method: "POST",
                url: "/Audit/WorkstationEvents?handler=FilterWorkstationEvents",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: $('#filterForm').serialize(),
                async: true,
                success: function (response) {
                    $("#content").html(response);
                }
            });
        });

        //Clear filter
        $(document).on('click', '#clearFilter', function () {
            $('#startDate').val("");
            $('#endDate').val("");
            $('#eventId').val("");
            $('#severityId').val("");
            $('#note').val("");
            $('#workstationId').val("");
            $('#userSession').val("");
            $('#deviceId').val("");
            $('#employeeId').val("");
            $('#companyId').val("");
            $('#departmentId').val("");
            $('#deviceAccountId').val("");
            $('#deviceAccountTypeId').val("");
        });

        $(document).ready(function () {
            // Breadcrumbs
            $('#breadcrumb').toggleClass('d-none');
            $('.breadcrumb').append('<li class="breadcrumb-item active">Audit</li>');
            $('.breadcrumb').append('<li class="breadcrumb-item active">Events</li>');
        });
    </script>
}