@model HES.Web.Pages.SharedAccounts.IndexModel

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="SharedAccount.Name" class="control-label text-gray"></label>
        <input asp-for="SharedAccount.Name" class="form-control text-navyblue" />
        <span asp-validation-for="SharedAccount.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SharedAccount.Urls" class="control-label text-gray"></label>
        <input asp-for="SharedAccount.Urls" class="form-control text-navyblue" data-role="tags-input" />
        <span asp-validation-for="SharedAccount.Urls" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SharedAccount.Apps" class="control-label text-gray"></label>
        <input asp-for="SharedAccount.Apps" class="form-control text-navyblue" data-role="tags-input" />
        <span asp-validation-for="SharedAccount.Apps" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SharedAccount.Login" class="control-label text-gray"></label>
        <input asp-for="SharedAccount.Login" class="form-control text-navyblue" />
        <span asp-validation-for="SharedAccount.Login" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password" class="text-gray"></label>
        <input asp-for="Input.Password" class="form-control text-navyblue" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword" class="text-gray"></label>
        <input asp-for="Input.ConfirmPassword" class="form-control text-navyblue" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SharedAccount.OtpSecret" class="control-label text-gray"></label>
        <input asp-for="SharedAccount.OtpSecret" class="form-control text-navyblue" />
        <span asp-validation-for="SharedAccount.OtpSecret" class="text-danger"></span>
    </div>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Create" class="btn btn-primary" asp-page-handler="CreateSharedAccount" />
    </div>
</form>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}