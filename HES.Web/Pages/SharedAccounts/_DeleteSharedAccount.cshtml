@model HES.Web.Pages.SharedAccounts.IndexModel

<h5 class="text-gray mb-4">You want to delete shared account @Model.SharedAccount.Name?</h5>

<form method="post" class="text-right">
    <input type="hidden" asp-for="SharedAccount.Id" name="id" />
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <input type="submit" value="Delete" class="btn btn-danger" asp-page-handler="DeleteSharedAccount" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}