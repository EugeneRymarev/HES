@inherits HESComponentBase
<div>
    <div class="alert alert-warning rounded-0" role="alert" style="margin-left:-16px; margin-right:-16px">
        <b>Are you sure you want to turn on the alarm and lock all workstations?</b>
    </div>
    <div class="text-end mt-2">
        <button type="button" class="btn btn-secondary" @onclick="ModalDialogService.CancelAsync">Cancel</button>
        <ButtonSpinner Text="Confirm" Class="btn btn-danger" Callback="EnableAlarmAsync" />
    </div>
</div>