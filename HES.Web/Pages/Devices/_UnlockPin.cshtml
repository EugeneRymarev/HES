@model HES.Web.Pages.Devices.IndexModel

<h5 class="text-gray mb-4">Confirm the pin unlock on the device @Model.Device.Id?</h5>

<form method="post" class="text-right">
    <input type="hidden" asp-for="Device.Id" name="deviceId" />
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <input type="submit" value="Unlock" class="btn btn-primary" asp-page-handler="UnlockPin" />
</form>