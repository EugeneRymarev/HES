@if (LicenseStatuses == null)
{
    <LoadingText />
}
else
{
<EditForm Model="Filter" OnValidSubmit="FilteredAsync">
    <DataAnnotationsValidator />

    <div class="row">
        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">Start Date</label>
            <input type="date" id="filterCreatedAtStartDate" @bind="Filter.StartDate" class="form-control" />
            <ValidationMessage For="() => Filter.StartDate" />
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">End Date</label>
            <input type="date" id="filterCreatedAtStartDate" @bind="Filter.EndDate" class="form-control" />
            <ValidationMessage For="() => Filter.EndDate" />
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">Battery</label>
            <InputNumber id="filterBattery" @bind-Value="Filter.Battery" class="form-control" />
            <ValidationMessage For="() => Filter.Battery" />
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">Firmware</label>
            <InputText id="filterFirmware" @bind-Value="Filter.Firmware" class="form-control" />
            <ValidationMessage For="() => Filter.Firmware" />
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">License Status</label>
            <select id="filterStatus" @bind="Filter.LicenseStatus" class="form-control">
                <option selected></option>
                @foreach (var item in LicenseStatuses)
                {
                    <option value="@item.Text">@item.Text</option>
                }
            </select>
            <ValidationMessage For="() => Filter.LicenseStatus" />
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">Employee</label>
            <InputText id="filterEmployee" @bind-Value="Filter.EmployeeName" class="form-control" />
            <ValidationMessage For="() => Filter.EmployeeName" />
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">Company</label>
            <InputText id="filterCompany" @bind-Value="Filter.CompanyName" class="form-control" />
            <ValidationMessage For="() => Filter.CompanyName" />
        </div>

        <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
            <label class="mb-0 text-gray">Department</label>
            <InputText id="filterDepartment" @bind-Value="Filter.DepartmentName" class="form-control" />
            <ValidationMessage For="() => Filter.DepartmentName" />
        </div>

        <div class="col align-self-end text-right form-group">
            <button id="clearFilter" type="button" class="btn btn-secondary" @onclick="ClearAsync">Clear</button>
            <input id="submitFilter" type="submit" value="Filter" class="btn btn-primary" />
        </div>
    </div>
</EditForm>
}