@if (HardwareVaultId == null)
{
    <LoadingSpinner />
}
else
{
        @if (VaultStatus == VaultStatus.Suspended)
        {
            <div class="alert alert-success" role="alert">
                Вы уверены что хотите заморозить @HardwareVaultId устройство?
            </div>

            <div>
                <textarea @bind="StatusDescription" class="form-control" placeholder="StatusDescription" rows="2" />
            </div>

            <div class="d-flex justify-content-end mt-2">
                <button class="btn btn-secondary mr-2" @onclick="CloseAsync">Cancle</button>
                <input type="submit" class="btn btn-primary" @onclick="ChangeStatusAsync" value="Submit" />
            </div>
        }
}

