@page
@model HES.Web.Pages.Dashboard.IndexModel
@{
    ViewData["Title"] = "Dashboard";
    ViewData["ActivePage"] = MenuNavPages.Dashboard;
}
<partial name="_SuccessMessage" for="SuccessMessage" />
<partial name="_ErrorMessage" for="ErrorMessage" />
<style>
    .dashboard-card {
        background-color: #fff;
        background-clip: border-box;
        border: 1px solid rgba(0,0,0,.125);
        border-radius: .25rem;
        height: 200px;
        margin-bottom: 30px;
        padding: 15px;
    }
</style>
<h1 class="text-navyblue">Hideez Enterprise Server</h1>

<div id="content">
    <partial name="_DashboardContent" />
</div>

@section scripts{
    <script>

        function LoadInfo() {
            $.ajax({
                url: "/Dashboard?handler=LoadInfo",
                type: "Get",
                //data: { id: id },
                async: true,
                success: function (response) {
                    alert('@Model.DeviceTaskCount');
                    $('#deviceTaks').html('@Model.DeviceTaskCount');
                }
            });
        }

        $(document).ready(function () {
            // Device Tasks
            //LoadInfo();

            // Breadcrumbs
            $('#breadcrumb').toggleClass('d-none');
            $('.breadcrumb').append('<li class="breadcrumb-item active">Dashboard</li>');
        });
    </script>
}