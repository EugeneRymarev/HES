@model HES.Web.Pages.Dashboard.IndexModel
<div class="col-12 col-xl-4">
    <div class="dashboard-card">
        <div class="dashboard-card-header">
            Devices
        </div>
        @if (Model.DevicesNotify.Count() > 0)
        {
            <div class="dashboard-card-notify dashboard-card-body">
                <div class="dashboard-card-wrapper">
                    <img class="dashboard-card-notify dashboard-card-logo__img" src="~/svg/dashboard/workstations.svg" />
                </div>
                <div class="dashboard-card-wrapper border-right">
                    <div class="dashboard-card-notify dashboard-card-info__text font-weight-bold">@Model.RegisteredDevicesCount</div>
                    <div class="dashboard-card-info__title"><a class="dashboard-link" asp-page="/Devices/Index">Registered</a></div>
                </div>
                <div class="dashboard-card-wrapper">
                    <div class="dashboard-card-notify dashboard-card-info__text">@Model.FreeDevicesCount</div>
                    <div class="dashboard-card-info__title"><a class="dashboard-link" asp-page="./DevicesInReserve">In reserve</a></div>
                </div>
            </div>
            <div class="dashboard-card-notify-wrapper">
                <ul class="list-group w-100">
                    @foreach (var item in Model.DevicesNotify)
                    {
                        <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span class="text-navyblue">@item.Message</span>
                            <span class="badge badge-danger badge-pill">@item.Count</span>
                        </li>
                    }
                </ul>
            </div>
        }
        else
        {
            <div class="dashboard-card-logo">
                <img class="dashboard-card-logo__img" src="~/svg/dashboard/devices.svg" />
            </div>
            <div class="dashboard-card-body">
                <div class="dashboard-card-wrapper border-right">
                    <div class="dashboard-card-info__text font-weight-bold">@Model.RegisteredDevicesCount</div>
                    <div class="dashboard-card-info__title"><a class="dashboard-link" asp-page="/Devices/Index">Registered</a></div>
                </div>
                <div class="dashboard-card-wrapper">
                    <div class="dashboard-card-info__text">@Model.FreeDevicesCount</div>
                    <div class="dashboard-card-info__title"><a class="dashboard-link" asp-page="./DevicesInReserve">In reserve</a></div>
                </div>
            </div>
        }
    </div>
</div>