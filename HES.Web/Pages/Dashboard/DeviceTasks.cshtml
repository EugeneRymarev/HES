@page
@model HES.Web.Pages.Dashboard.DeviceTasksModel
@{
    ViewData["Title"] = "DeviceTasks";
    ViewData["ActivePage"] = MenuNavPages.Dashboard;
}

<h1>DeviceTasks</h1>


<table id="devices" class="display table table-hover border rounded w-100">
    <thead>
        <tr>
            <th class="d-none"></th>
            <th data-priority="1">
                @Html.DisplayNameFor(model => model.DeviceTasks[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceTasks[0].Urls)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceTasks[0].Apps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceTasks[0].Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceTasks[0].Operation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceTasks[0].DeviceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeviceTasks[0].CreatedAt)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DeviceTasks)
        {
            <tr>
                <td class="d-none"></td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Urls)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apps)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Operation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeviceId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
        $(document).ready(function () {
            // Breadcrumbs
            $('#breadcrumb').toggleClass('d-none');
            $('.breadcrumb').append('<li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>');
            $('.breadcrumb').append('<li class="breadcrumb-item active">Device Tasks</li>');
        });
    </script>
}