@model HES.Web.Pages.Dashboard.IndexModel
<div class="col-12 col-xl-4">
    <div class="dashboard-card">
        <div class="dashboard-card-header">
            Hideez Enterprise Server
        </div>
        @if (Model.ServerNotify.Count() > 0)
        {
            <div class="dashboard-card-notify dashboard-card-body">
                <div class="dashboard-card-wrapper">
                    <img class="dashboard-card-notify dashboard-card-logo__img" src="~/svg/dashboard/server.svg" />
                </div>
                <div class="dashboard-card-wrapper border-right">
                    <div class="dashboard-card-notify dashboard-card-info__text font-weight-bold">@Model.ServerVersion</div>
                    <div class="dashboard-card-info__title">HES version</div>
                </div>
                <div class="dashboard-card-wrapper">
                    <div class="dashboard-card-notify dashboard-card-info__text">@Model.ServerRemoteTasksCount</div>
                    <div class="dashboard-card-info__title"><a class="btn btn-outline-secondary" asp-page="./DeviceTasks">Device Tasks</a></div>
                </div>
            </div>
            <div class="dashboard-card-notify-wrapper">
                <div class="list-group w-100">
                    @foreach (var item in Model.ServerNotify)
                    {
                        <a asp-page="@item.Page" asp-page-handler="@item.Handler" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <span class="text-navyblue">@item.Message</span>
                            <span class="badge badge-danger badge-pill">@item.Count</span>
                        </a>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="dashboard-card-logo">
                <img class="dashboard-card-logo__img" src="~/svg/dashboard/server.svg" />
            </div>
            <div class="dashboard-card-body">
                <div class="dashboard-card-wrapper border-right">
                    <div class="dashboard-card-info__text font-weight-bold">@Model.ServerVersion</div>
                    <div class="dashboard-card-info__title">HES version</div>
                </div>
                <div class="dashboard-card-wrapper">
                    <div class="dashboard-card-info__text">@Model.ServerRemoteTasksCount</div>
                    <div class="dashboard-card-info__title"><a class="btn btn-outline-secondary" asp-page="./DeviceTasks">Device Tasks</a></div>
                </div>
            </div>
        }
    </div>
</div>