@page
@model HES.Web.Pages.Logs.IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Logs</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <!-- DataTables CSS -->
    <link href="~/lib/datatebles/dataTables.bootstrap4.css" rel="stylesheet" />
    <!-- Logs CSS -->
    <link href="~/css/logs.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <partial name="_ErrorMessage" for="ErrorMessage" />
    <!-- Wrapper -->
    <div class="dashboard-wrapper">
        <!-- Sidebar -->
        <div class="dashboard-sidebar">
            <div class="dashboard-sidebar__body">
                <div class="list-group" id="list-tab" role="tablist">
                    @foreach (var log in Model.LogFiles.OrderByDescending(x => x))
                    {
                        <a class="list-group-item list-group-item-action show-log" data-toggle="list" href="#" role="tab">@log</a>
                    }
                </div>
            </div>
        </div>
        <!-- Content -->
        <div class="dashboard-content">
            <div class="dashboard-content__header">
                <nav class="navbar navbar-light bg-light border-bottom shadow-sm">
                    <div>
                        <button id="download_btn" class="btn btn-secondary d-none" data-name="" data-toggle="tooltip" data-placement="bottom" title="Download file">
                            <img src="~/svg/logs/download.svg" />
                        </button>
                        <button id="delete_btn" class="btn btn-secondary d-none" data-name="" data-toggle="tooltip" data-placement="bottom" title="Delete file">
                            <img src="~/svg/logs/delete.svg" />
                        </button>
                    </div>
                    <div>
                        <span class="badge badge-success">INFO</span> <span id="infoLabel" class="badge badge-light">0</span>
                        <span class="badge badge-info">DEBUG</span> <span id="debugLabel" class="badge badge-light">0</span>
                        <span class="badge badge-warning">WARN</span> <span id="warnLabel" class="badge badge-light">0</span>
                        <span class="badge badge-danger">ERROR</span> <span id="errorLabel" class="badge badge-light">0</span>
                        <span class="badge badge-dark">FATAL</span> <span id="fatalLabel" class="badge badge-light">0</span>
                    </div>
                    <div class="form-group has-search-right m-0">
                        <div class="form-control-feedback">
                            <img class="img-size" src="~/svg/action/search.svg" />
                        </div>
                        <input id="searchbox" type="text" class="form-control" placeholder="Search">
                    </div>
                </nav>
            </div>
            <div class="dashboard-content__body">
                <div id="content"></div>
            </div>
        </div>
    </div>

    <div class="modal" id="modalView" tabindex="-1" role="dialog" aria-labelledby="modalDialogTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title text-navyblue">Log</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div id="modalBody" class="modal-body">
                    <h6>Date</h6>
                    <p id="date"></p>
                    <h6>Level</h6>
                    <p id="level"></p>
                    <h6>Logger</h6>
                    <p id="logger"></p>
                    <h6>Message</h6>
                    <p id="message"></p>
                    <h6>Method</h6>
                    <p id="method"></p>
                    <h6>Url</h6>
                    <p id="url"></p>
                </div>
            </div>
        </div>
    </div>

    <!-- JQuery -->
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    <!-- DataTebles JS -->
    <script src="~/lib/datatebles/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatebles/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).on('click', '#download_btn', function () {
            var name = $(this).attr('data-name');
            document.location.href = "/Logs?name=" + name + "&handler=DownloadFile";
        });

        $(document).on('click', '#delete_btn', function () {
            var name = $(this).attr('data-name');
            document.location.href = "/Logs?name=" + name + "&handler=DeleteFile";
        });

        $(document).on('click', '.show-log', function () {
            $('#content').html("<div class='text-center d-flex align-items-center justify-content-center' style='height: calc(100vh - 90px);'><div class='spinner-border text-primary' role='status'></div></div>");
            var name = $(this).text();
            $('#download_btn').removeClass('d-none');
            $('#download_btn').attr('data-name', name);
            $('#delete_btn').removeClass('d-none');
            $('#delete_btn').attr('data-name', name);
            $.ajax({
                url: "/logs?handler=ShowLog",
                type: "Get",
                data: { name: name },
                async: true,
                success: function (response) {
                    $("#content").html(response);
                }
            });
        });

        $('[data-toggle="tooltip"]').tooltip();
    </script>
</body>
</html>