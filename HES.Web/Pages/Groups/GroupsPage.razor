@using HES.Web.Components

@if (Groups == null)
{
    <LoadingSpinner />
}
else
{
    <!-- Actions -->
    <div class="d-flex align-items-center flex-wrap mb-2">
        <button type="button" class="btn btn-primary mb-1 mr-2" @onclick="OpenModalAddGroup">
            Add from AD
        </button>
        <button type="button" class="btn btn-primary mb-1 mr-2" @onclick="OpenModalGreateGroup">
            Create group
        </button>
        <button type="button" class="btn btn-light border mb-1 mr-2 @(CurrentGroupId == null ? "d-none" : null)" title="Details" @onclick="GroupDetails">
            <img class="icon-btn" src="/svg/action/details.svg" />
            Details
        </button>
        <button type="button" class="btn btn-light border mb-1 mr-2 @(CurrentGroupId == null ? "d-none" : null)" title="Edit Group" @onclick="OpenModalEditGroup">
            <img class="icon-btn" src="/svg/action/edit.svg" />
            Edit
        </button>
        <button type="button" class="btn btn-light border mb-1 mr-2 @(CurrentGroupId == null ? "d-none" : null)" title="Delete Group" @onclick="OpenModalDeleteGroup">
            <img class="icon-btn" src="/svg/action/delete.svg" />
            Delete
        </button>
    </div>
    <!-- SearchBox -->
    <div class="has-search-right mb-3">
        <div class="form-control-feedback">
            <img class="img-size" src="/svg/action/search.svg" />
        </div>
        <input type="text" @bind-value="SearchText" @bind-value:event="oninput" @onkeyup="@OnKeyUp" class="form-control " placeholder="@Placeholder">
    </div>
    <!-- Table -->
    <div class="table-responsive mb-3">
        <table id="groups" class="table table-hover border rounded w-100 mb-0">
            <thead style="user-select: none; ">
                <tr>
                    <th style="width:70%" @onclick="@(() => SortTable(nameof(Group.Name)))">
                        @nameof(Group.Name)
                        <img class="table-sort-arrow @SetSortIcon(nameof(Group.Name))" />
                    </th>
                    <th style="width:20%" @onclick="@(() => SortTable(nameof(Group.Email)))">
                        @nameof(Group.Email)
                        <img class="table-sort-arrow @SetSortIcon(nameof(Group.Email))" />
                    </th>
                    <th style="width:10%" @onclick="@(() => SortTable(nameof(Group.GroupMemberships)))">
                        Employees
                        <img class="table-sort-arrow @SetSortIcon(nameof(Group.GroupMemberships))" />
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Groups)
                {
                    <tr @onclick="(() => OnRowSelected(item.Id))" @ondblclick="GroupDetails" class="table-row @(CurrentGroupId == item.Id ? "table-selected-row" : string.Empty)">
                        <td title="@item.Description">
                            @item.Name
                        </td>
                        <td>
                            @item.Email
                        </td>
                        <td>
                            @item.GroupMemberships.Count
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <Pagination DisplayRecordsSelector="true"
                DisplayTotalRecordsInfo="true"
                SelectedPageAsync="RefreshTable"
                TotalRecords="TotalRecords"
                CurrentPage="CurrentPage"
                DisplayRows="DisplayRows"
                DisplayRecords="Groups.Count" />
}