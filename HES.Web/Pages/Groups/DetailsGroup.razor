@if (GroupMemberships == null)
{
    <LoadingSpinner />
}
else
{
    <div class="d-flex justify-content-between align-items-center details-card mb-2">
        <h1 class="text-navyblue text-break m-0 pl-3">@Group.Name</h1>
        <div class="pr-3">
            <button type="button" class="btn btn-primary text-nowrap" @onclick="OpenModalAddEmployees">
                Add Employee
            </button>
        </div>
    </div>
    <div class="d-flex justify-content-start align-items-start details-card mb-2">
        <div class="pl-3"><span class="font-weight-bold">Email: </span>@Group.Email</div>
        <div class="pl-3"><span class="font-weight-bold">Description: </span>@Group.Description</div>
    </div>
    <div>
        <h4 class="text-navyblue ml-1">Members</h4>
    </div>
    <div class="table-responsive mb-3">
        <table id="groups" class="table table-hover border rounded w-100 mb-0">
            <thead style="user-select: none;">
                <tr>
                    <th class="w-25">
                        Employee
                    </th>
                    <th>
                        Email
                    </th>
                    <th class="table-action-column"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var member in GroupMemberships)
                {
                    <tr>
                        <td>
                            @member.Employee.FullName
                        </td>
                        <td>
                            @member.Employee.Email
                        </td>
                        <td>
                            <button class="btn m-0 p-0" title="Remove Employee" @onclick="@(()=>OpenModalRemoveEmployee(member.EmployeeId))">
                                <img src="/svg/action/delete.svg" />
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}