@model HES.Web.Pages.Settings.OrgStructure.IndexModel

<style>
    .popover-body {
        color: #ff0000;
    }

    .popover {
        left: -75px !important;
    }
</style>

<form id="departmentForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Department.Id" />
    <div class="form-group">
        <label asp-for="Department.CompanyId" class="control-label text-gray"></label>
        <select id="companyId" asp-for="Department.CompanyId" class="form-control text-navyblue" asp-items="ViewBag.CompanyId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Department.Name" class="control-label text-gray"></label>
        <input asp-for="Department.Name" class="form-control text-navyblue orgstructure-popover" data-container="body" data-toggle="popover" data-placement="bottom" data-content="Department already exists." />
        <span asp-validation-for="Department.Name" class="text-danger"></span>
    </div>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="EditDepartment" />
    </div>
</form>

<script src="~/js/orgstructure/department-validation.js"></script>