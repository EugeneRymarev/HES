@model HES.Web.Pages.Settings.OrgStructure.IndexModel

@if (Model.HasForeignKey)
{
    <h5 class="text-gray mb-4 ">The department @Model.Department.Name contains employees, remove employees to remove department.</h5>
    <div class="text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
}
else
{
    <h5 class="text-gray mb-4 ">You want to delete department @Model.Department.Name?</h5>

    <form method="post" class="text-right">
        <input type="hidden" asp-for="Department.Id" name="id" />
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Delete" class="btn btn-danger" asp-page-handler="DeleteDepartment" />
    </form>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}