@model HES.Web.Pages.Settings.OrgStructure.IndexModel

<h5 class="text-gray mb-4 ">You want to delete company @Model.Company.Name?</h5>

<form method="post" class="text-right">
    <input type="hidden" asp-for="Company.Id" name="id" />
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    <input type="submit" value="Delete" class="btn btn-danger" asp-page-handler="DeleteCompany" />
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}