@inherits HESComponentBase

@if (!Initialized)
{
    <LoadingText />
}
else
{
    @if (EntityBeingEdited)
    {
        <EditedByAnother EntityName="company" CloseAction="ModalDialogService.CancelAsync" />
    }
    else
    {
        <h5 class="text-gray mb-4 text-break">You want to delete department @Department.Name?</h5>
        <div class="text-end">
            <button type="button" class="btn btn-secondary" @onclick="ModalDialogService.CancelAsync">Cancel</button>
            <ButtonSpinner Text="Delete" Class="btn btn-danger" Callback="DeleteAsync" />
        </div>
    }
}