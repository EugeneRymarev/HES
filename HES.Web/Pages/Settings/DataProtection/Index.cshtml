@section Scripts{
    <script>
        // Open modal dialog
        $(document).on('click', '.open-modal-dialog-enable', function () {
            $('#modalDialogEnable').modal('toggle');

            // Validation partial view
            $('form').removeData('validator');
            $('form').removeData('unobtrusiveValidation');
            $.validator.unobtrusive.parse('form');
        });
