@page
@model HES.Web.SetPasswordModel
@{
    ViewData["Title"] = "SetPassword";
    Layout = "_ProtectionLayout.cshtml";
}

<partial name="_ErrorMessage" for="ErrorMessage" />
<div class="content-centered">
    <div class="custom-card">
        <div class="text-center m-3">
            <img src="~/svg/hes-logo.svg" />
        </div>
        <form method="post">
            <h4 class="text-navyblue text-center my-4">Set encryption password</h4>
            <div class="form-group">
                <label class="text-gray" asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text-gray" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-primary">Set password</button>
            </div>
        </form>
    </div>
    <div class="mt-5" style="max-width:900px;">
        <div class="row w-100">
            <div class="col-12 col-md-6">
                <h5>What is encrypted?</h5>
                <ul>
                    <li>shared accounts passwords</li>
                    <li>devices master passwords</li>
                    <li>remote tasks</li>
                </ul>
                <h5>When the encryption password is required?</h5>
                <ul>
                    <li>at the first launch of the server</li>
                    <li>at every restart of the server</li>
                </ul>
            </div>
            <div class="col-12 col-md-6">
                <h5 class="text-danger">WARNING:</h5>
                <ul>
                    <li>there is no password recovery process</li>
                    <li>if you forget the encryption password, you won't be able to get access to the server at its restart</li>
                </ul>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}