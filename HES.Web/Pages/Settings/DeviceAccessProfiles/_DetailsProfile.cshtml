@model HES.Web.Pages.Settings.DeviceAccessProfiles.IndexModel

<div class="form-group">
    <label asp-for="DeviceAccessProfile.Name" class="control-label text-gray"></label>
    <input asp-for="DeviceAccessProfile.Name" class="form-control text-navyblue readonly-white" readonly />
</div>

<label class="text-gray">Authorization parameters</label>
<table class="table border rounded w-100 disable-selection">
    <thead>
        <tr>
            <th></th>
            <th class="text-center align-middle">
                Bonding
            </th>
            <th class="text-center align-middle">
                Connection
            </th>
            <th class="text-center align-middle">
                New Channel
            </th>
            <th class="text-center align-middle">
                New Link
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                Button
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="ButtonBonding" checked="@Model.DeviceAccessProfile.ButtonBonding" disabled>
                    <label class="custom-control-label" for="ButtonBonding"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="ButtonConnection" checked="@Model.DeviceAccessProfile.ButtonConnection" disabled>
                    <label class="custom-control-label" for="ButtonConnection"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="ButtonNewChannel" checked="@Model.DeviceAccessProfile.ButtonNewChannel" disabled>
                    <label class="custom-control-label" for="ButtonNewChannel"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="ButtonNewLink" checked="@Model.DeviceAccessProfile.ButtonNewLink" disabled>
                    <label class="custom-control-label" for="ButtonNewLink"></label>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                PIN
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="PinBonding" checked="@Model.DeviceAccessProfile.PinBonding" disabled>
                    <label class="custom-control-label" for="PinBonding"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="PinConnection" checked="@Model.DeviceAccessProfile.PinConnection" disabled>
                    <label class="custom-control-label" for="PinConnection"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="PinNewChannel" checked="@Model.DeviceAccessProfile.PinNewChannel" disabled>
                    <label class="custom-control-label" for="PinNewChannel"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="PinNewLink" checked="@Model.DeviceAccessProfile.PinNewLink" disabled>
                    <label class="custom-control-label" for="PinNewLink"></label>
                </div>
            </td>
        </tr>
        <tr>
            <td>
                Master-key
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="MasterKeyBonding" checked="@Model.DeviceAccessProfile.MasterKeyBonding" disabled>
                    <label class="custom-control-label" for="MasterKeyBonding"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="MasterKeyConnection" checked="@Model.DeviceAccessProfile.MasterKeyConnection" disabled>
                    <label class="custom-control-label" for="MasterKeyConnection"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="MasterKeyNewChannel" checked="@Model.DeviceAccessProfile.MasterKeyNewChannel" disabled>
                    <label class="custom-control-label" for="MasterKeyNewChannel"></label>
                </div>
            </td>
            <td class="text-center">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="MasterKeyNewLink" checked="@Model.DeviceAccessProfile.MasterKeyNewLink" disabled>
                    <label class="custom-control-label" for="MasterKeyNewLink"></label>
                </div>
            </td>
        </tr>
    </tbody>
</table>

<label class="text-gray">PIN settings</label>
<table class="table border rounded w-100 disable-selection">
    <thead>
    </thead>
    <tbody>
        <tr>
            <td>
                PIN expiration
            </td>
            <td class="text-center pr-1">
                <input id="pin_expiration" asp-for="DeviceAccessProfile.PinExpirationConverted" type="text" data-slider-min="1" data-slider-max="107" data-slider-step="1" data-slider-value="@Model.DeviceAccessProfile.PinExpirationConverted" data-slider-enabled="false" />
            </td>
            <td class="text-center">
                <h6 id="pin_expiration_value"></h6>
            </td>
        </tr>
        <tr>
            <td>
                PIN length
            </td>
            <td class="text-center pr-1">
                <input id="pin_length" asp-for="DeviceAccessProfile.PinLength" type="text" data-slider-min="4" data-slider-max="8" data-slider-step="1" data-slider-value="@Model.DeviceAccessProfile.PinLength" data-slider-enabled="false" />
            </td>
            <td class="text-center">
                <h6 id="pin_length_value"></h6>
            </td>
        </tr>
        <tr>
            <td>
                PIN try count
            </td>
            <td class="text-center pr-1">
                <input id="pin_try_count" asp-for="DeviceAccessProfile.PinTryCount" type="text" data-slider-min="3" data-slider-max="300" data-slider-step="1" data-slider-value="@Model.DeviceAccessProfile.PinTryCount" data-slider-enabled="false" />
            </td>
            <td class="text-center">
                <h6 id="pin_try_count_value"></h6>
            </td>
        </tr>
        <tr>
            <td>
                Button expiration
            </td>
            <td class="text-center pr-1">
                <input id="button_expiration_timeout" asp-for="DeviceAccessProfile.ButtonExpirationTimeout" type="text" data-slider-min="1" data-slider-max="15" data-slider-step="1" data-slider-value="@Model.DeviceAccessProfile.ButtonExpirationTimeout" data-slider-enabled="false" />
            </td>
            <td class="text-center">
                <h6 id="button_expiration_timeout_value" style="width:68px;"></h6>
            </td>
        </tr>
    </tbody>
</table>

<div class="form-group m-0 text-right">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
</div>