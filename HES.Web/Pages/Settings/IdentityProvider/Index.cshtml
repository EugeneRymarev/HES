@page
@model HES.Web.Pages.Settings.IdentityProvider.IndexModel
@{
    ViewData["Title"] = "Identity Provider";
    ViewData["ActivePage"] = MenuNavPages.Settings;
    ViewData["SettingsPage"] = SettingsNavPages.IdentityProvider;
}

<partial name="_SuccessMessage" for="SuccessMessage" />
<partial name="_ErrorMessage" for="ErrorMessage" />

<h1 class="text-navyblue mb-3">SAML IdP Settings</h1>

<form method="post" class="custom-card">
    <input type="hidden" asp-for="SamlIdentityProvider.Id" />
    <div class="form-group row">
        <div class="col">
            <label asp-for="SamlIdentityProvider.Enabled" class="control-label"></label>
        </div>
        <div class="col-auto">
            <div class="custom-control custom-switch">
                <input id="idpEnabled" asp-for="SamlIdentityProvider.Enabled" type="checkbox" class="custom-control-input" checked="@Model.SamlIdentityProvider.Enabled">
                <label class="custom-control-label" for="idpEnabled"></label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="SamlIdentityProvider.Url" class="control-label"></label>
        <input id="idpUrl" asp-for="SamlIdentityProvider.Url" class="form-control text-navyblue" />
        <span asp-validation-for="SamlIdentityProvider.Url" class="text-danger"></span>
    </div>
    <div class="form-group mb-0">
        <input id="idpSaveBtn" type="submit" value="Save" class="btn btn-primary d-none" asp-page-handler="EditSamlIdentityProvider" />
    </div>
</form>

@section Scripts{
    <script>
        var saveBtn = $('#idpSaveBtn');

        $(document).on("change", "#idpEnabled", function () {
            saveBtn.removeClass('d-none');
        });

        $(document).on('input', '#idpUrl', function () {
            saveBtn.removeClass('d-none');
        });
    </script>
    <partial name="_ValidationScriptsPartial" />
}