@inherits HESComponentBase

@if (ApplicationUser == null)
{
    <LoadingText />
}
else
{
    <h5 class="text-gray mb-4 text-break">You want to delete administrator @ApplicationUser.Email?</h5>
    <div class="text-right">
        <button type="button" class="btn btn-secondary" @onclick="async () => await ModalDialogService.CancelAsync()">Cancel</button>
        <ButtonSpinner Class="btn btn-danger" Text="Delete" Callback="@(async () => await DeleteUserAsync())" />
    </div>
}