@page
@model HES.Web.Pages.Settings.LicenseOrders.CreateModel

@{
    ViewData["Title"] = "Create";
}

<partial name="_SuccessMessage" for="SuccessMessage" />
<partial name="_ErrorMessage" for="ErrorMessage" />

<h1 class="text-navyblue">Create License Order</h1>

@if (Model.NonLicensedDevices.Count == 0 && Model.LicensedDevices.Count == 0)
{
    <div class="row white-card">
        <h5>You don't have any Hideez devices yet. You can place an order at <a href="https://hideez.com/pages/hideez-enterprise" role="button">hideez.com</a></h5>
    </div>
}
else
{
    <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="pills-new-license-tab" data-toggle="pill" href="#pills-new-license" role="tab" aria-controls="pills-new-license" aria-selected="true">New license</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="pills-renew-license-tab" data-toggle="pill" href="#pills-renew-license" role="tab" aria-controls="pills-renew-license" aria-selected="false">Renew license</a>
        </li>
    </ul>
    <div class="tab-content" id="pills-tabContent">
        <div class="tab-pane fade show active" id="pills-new-license" role="tabpanel" aria-labelledby="pills-new-license-tab">
            <form method="post">
                <div class="row white-card">
                    @if (Model.NonLicensedDevices.Count != 0)
                    {
                        <div class="col-12 col-sm-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NewLicenseOrderDto.ContactEmail" class="control-label"></label>
                                <input asp-for="NewLicenseOrderDto.ContactEmail" class="form-control" />
                                <span asp-validation-for="NewLicenseOrderDto.ContactEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewLicenseOrderDto.Note" class="control-label"></label>
                                <textarea class="form-control" asp-for="NewLicenseOrderDto.Note" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewLicenseOrderDto.StartDate" class="control-label"></label>
                                <input type="date" asp-for="NewLicenseOrderDto.StartDate" class="form-control" value="@string.Format("{0:yyyy-MM-dd}", DateTime.Now)" />
                                <span asp-validation-for="NewLicenseOrderDto.StartDate" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewLicenseOrderDto.EndDate" class="control-label"></label>
                                <input type="date" asp-for="NewLicenseOrderDto.EndDate" class="form-control" value="@string.Format("{0:yyyy-MM-dd}", DateTime.Now)" />
                                <span asp-validation-for="NewLicenseOrderDto.EndDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-8" style="max-height:390px; overflow-y:auto">
                            <table id="nonLicensedDevices" class="display table table-hover inside-scrollbar w-100">
                                <thead>
                                    <tr>
                                        <th class="table-col-menu">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" onchange="checkAllNonLicensedDevices(this)" class="custom-control-input" id="checkbox_all_nonLicensedDevices">
                                                <label class="custom-control-label" for="checkbox_all_nonLicensedDevices"></label>
                                            </div>
                                        </th>
                                        <th>
                                            Serial Number
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var device in Model.NonLicensedDevices)
                                    {
                                        <tr>
                                            <td class="table-col-menu">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" name="nonLicensedDevicesIds" id="nonLicensedDevices_@device.Id" value="@device.Id">
                                                    <label class="custom-control-label" for="nonLicensedDevices_@device.Id"></label>
                                                </div>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => device.Id)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col">
                            <input type="submit" value="Create" class="btn btn-primary mr-2" asp-page-handler="CreateNewLicense" />
                            <a class="btn btn-secondary" asp-page="Index">Back</a>
                        </div>
                    }
                    else
                    {
                        <h5>All of your devices already have a license. If you want to renew them, go to the "Renew License" tab.</h5>
                    }
                </div>
            </form>
        </div>
        <div class="tab-pane fade" id="pills-renew-license" role="tabpanel" aria-labelledby="pills-renew-license-tab">
            <form method="post">
                <div class="row filter-card">
                    @if (Model.LicensedDevices.Count != 0)
                    {
                        <div class="col-12 col-sm-4">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="RenewLicenseOrderDto.ContactEmail" class="control-label"></label>
                                <input asp-for="RenewLicenseOrderDto.ContactEmail" class="form-control" />
                                <span asp-validation-for="RenewLicenseOrderDto.ContactEmail" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="RenewLicenseOrderDto.Note" class="control-label"></label>
                                <textarea class="form-control" asp-for="RenewLicenseOrderDto.Note" rows="3"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="RenewLicenseOrderDto.EndDate" class="control-label"></label>
                                <input type="date" asp-for="RenewLicenseOrderDto.EndDate" class="form-control" value="@string.Format("{0:yyyy-MM-dd}", DateTime.Now)" />
                                <span asp-validation-for="RenewLicenseOrderDto.EndDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12 col-sm-8" style="max-height:390px; overflow-y:auto">
                            <table id="licensedDevices" class="display table table-hover inside-scrollbar w-100">
                                <thead>
                                    <tr>
                                        <th class="table-col-menu">
                                            <div class="custom-control custom-checkbox">
                                                <input type="checkbox" onchange="checkAllLicensedDevices(this)" class="custom-control-input" id="checkbox_all_licensedDevices">
                                                <label class="custom-control-label" for="checkbox_all_licensedDevices"></label>
                                            </div>
                                        </th>
                                        <th>
                                            Serial Number
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var device in Model.LicensedDevices)
                                    {
                                        <tr>
                                            <td class="table-col-menu">
                                                <div class="custom-control custom-checkbox">
                                                    <input type="checkbox" class="custom-control-input" name="licensedDevicesIds" id="licensedDevices_@device.Id" value="@device.Id">
                                                    <label class="custom-control-label" for="licensedDevices_@device.Id"></label>
                                                </div>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => device.Id)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col">
                            <input type="submit" value="Create" class="btn btn-primary mr-2" asp-page-handler="CreateRenewLicense" />
                            <a class="btn btn-secondary" asp-page="Index">Back</a>
                        </div>
                    }
                    else
                    {
                        <h5>You don't have any licenses that can be renewed. To purchase new licenses, go to the "New License" tab.</h5>
                    }
                </div>
            </form>
        </div>
    </div>
}

@section Scripts {
    <script>
        function checkAllNonLicensedDevices(chkb) {
            if (chkb.checked) {
                $('#nonLicensedDevices').each(function () {
                    $(this).find('input[type="checkbox"]').each(function () {
                        this.checked = true;
                    });
                });
            }
            else {
                $('#nonLicensedDevices').each(function () {
                    $(this).find('input[type="checkbox"]').each(function () {
                        this.checked = false;
                    });
                });
            }
        }

        function checkAllLicensedDevices(chkb) {
            if (chkb.checked) {
                $('#licensedDevices').each(function () {
                    $(this).find('input[type="checkbox"]').each(function () {
                        this.checked = true;
                    });
                });
            }
            else {
                $('#licensedDevices').each(function () {
                    $(this).find('input[type="checkbox"]').each(function () {
                        this.checked = false;
                    });
                });
            }
        }

        // Breadcrumbs
        $('#breadcrumb').toggleClass('d-none');
        $('.breadcrumb').append('<li class="breadcrumb-item"><a href="/Settings/LicenseOrders">License Orders</a></li>');
        $('.breadcrumb').append('<li class="breadcrumb-item active">Create Order</li>');
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
