@page
@model HES.Web.Pages.Settings.LicenseOrders.IndexModel

@{
    ViewData["Title"] = "License Orders";
    ViewData["ActivePage"] = MenuNavPages.Settings;
    ViewData["SettingsPage"] = SettingsNavPages.LicenseOrders;
}

<div class="row align-items-center mr-0">
    <div class="col-auto">
        <h1 class="text-navyblue">License Orders</h1>
    </div>
    <div class="col" id="loading"></div>
    <div class="col-auto p-1">
        <div class="form-group has-search-right m-0">
            <div class="form-control-feedback">
                <img class="img-size" src="~/svg/action/search.svg" />
            </div>
            <input id="searchbox" type="text" class="form-control" placeholder="Search">
        </div>
    </div>
    <div class="col-auto p-1">
        <a asp-page="Create" class="btn btn-primary open-modal-dialog">
            New Order
        </a>
    </div>
</div>

<table id="licenseOrders" class="display table table-hover border rounded w-100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].ContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].ProlongExistingLicenses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].OrderStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LicenseOrder)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ContactEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProlongExistingLicenses)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="~/svg/action/more.svg" />
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow" aria-labelledby="dropdownMenuLink">
                            <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">
                                <img src="~/svg/action/details.svg" />
                                Details
                            </a>
                            <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">
                                <img src="~/svg/action/edit.svg" />
                                Edit
                            </a>
                            <a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.Id">
                                <img src="~/svg/action/delete.svg" />
                                Delete
                            </a>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row mt-2">
    <div class="col d-flex justify-content-center justify-content-lg-start align-items-center mb-1 text-nowrap">
        <span class="d-flex align-items-center mr-1 text-navyblue">Show entries</span>
        <div id="entries_place"></div>
    </div>
    <div id="showing_place" class="col d-flex justify-content-center align-items-center mb-1 text-navyblue text-nowrap"></div>
    <div id="pagination_place" class="col d-flex justify-content-center justify-content-lg-end align-items-center mb-1"></div>
</div>

@section Scripts{
    <script>
        InitLicenseOrdersDT();
        LicenseOrdersSetBreadcrumbs();
    </script>
    <partial name="_ValidationScriptsPartial" />
}

