@page
@model HES.Web.Pages.Settings.LicenseOrders.IndexModel

@{
    ViewData["Title"] = "License Orders";
    ViewData["ActivePage"] = MenuNavPages.Settings;
    ViewData["SettingsPage"] = SettingsNavPages.LicenseOrders;
}

<partial name="_SuccessMessage" for="SuccessMessage" />
<partial name="_ErrorMessage" for="ErrorMessage" />

<div class="row align-items-center mr-0">
    <div class="col-auto">
        <h1 class="text-navyblue">License Orders</h1>
    </div>
    <div class="col" id="loading"></div>
    <div class="col-auto p-1">
        <div class="form-group has-search-right m-0">
            <div class="form-control-feedback">
                <img class="img-size" src="~/svg/action/search.svg" />
            </div>
            <input id="searchbox" type="text" class="form-control" placeholder="Search">
        </div>
    </div>
    <div class="col-auto p-1">
        <a asp-page="Create" class="btn btn-primary">
            New Order
        </a>
    </div>
</div>

<table id="licenseOrders" class="display table table-hover border rounded w-100">
    <thead>
        <tr>
            <th class="d-none"></th>
            <th data-priority="1">
                @Html.DisplayNameFor(model => model.LicenseOrder[0].ContactEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].Note)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].ProlongExistingLicenses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseOrder[0].EndDate)
            </th>
            <th data-priority="4">
                @Html.DisplayNameFor(model => model.LicenseOrder[0].CreatedAt)
            </th>
            <th data-priority="3">
                @Html.DisplayNameFor(model => model.LicenseOrder[0].OrderStatus)
            </th>
            <th class="table-col-menu" data-priority="2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LicenseOrder)
        {
            <tr>
                <td class="d-none"></td>
                <td>
                    @item.ContactEmail
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Note)
                </td>
                <td data-sort="@item.ProlongExistingLicenses">
                    @if (item.ProlongExistingLicenses)
                    {
                        <span class="badge badge-success">Yes</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">No</span>
                    }
                </td>
                <td data-sort="@(item.ProlongExistingLicenses == true ? 0 : item.StartDate.Value.Ticks)">
                    @if (!item.ProlongExistingLicenses)
                    {
                        @item.StartDate.Value.ToShortDateString()
                    }
                </td>
                <td data-sort="@item.EndDate.Ticks">
                    @item.EndDate.ToShortDateString()
                </td>
                <td data-sort="@item.CreatedAt.Ticks">
                    @TimeZoneInfo.ConvertTimeFromUtc((DateTime)item.CreatedAt, TimeZoneInfo.Local)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td class="table-col-menu">
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <img src="~/svg/action/more.svg" />
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow" aria-labelledby="dropdownMenuLink">
                            @if (item.OrderStatus == HES.Core.Enums.OrderStatus.New)
                            {
                                <a class="dropdown-item open-modal-dialog" data-id="@item.Id" data-action="SendOrder" data-title="Send order">
                                    <img src="~/svg/action/send.svg" />
                                    Send
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">
                                    <img src="~/svg/action/details.svg" />
                                    Details
                                </a>
                                @*
                                    <a class="dropdown-item" asp-page="./Edit" asp-route-id="@item.Id">
                                        <img src="~/svg/action/edit.svg" />
                                        Edit
                                    </a>
                                *@
                                <a class="dropdown-item" asp-page="./Delete" asp-route-id="@item.Id">
                                    <img src="~/svg/action/delete.svg" />
                                    Delete
                                </a>
                            }
                            else
                            {
                                <a class="dropdown-item" asp-page="./Details" asp-route-id="@item.Id">
                                    <img src="~/svg/action/details.svg" />
                                    Details
                                </a>
                            }
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="row mt-2">
    <div class="col d-flex justify-content-center justify-content-lg-start align-items-center mb-1 text-nowrap">
        <span class="d-flex align-items-center mr-1 text-navyblue">Show entries</span>
        <div id="entries_place"></div>
    </div>
    <div id="showing_place" class="col d-flex justify-content-center align-items-center mb-1 text-navyblue text-nowrap"></div>
    <div id="pagination_place" class="col d-flex justify-content-center justify-content-lg-end align-items-center mb-1"></div>
</div>

@* Modal *@
<div class="modal" id="modalDialog" tabindex="-1" role="dialog" aria-labelledby="modalDialogTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-navyblue" id="modalDialogTitle">Dialog</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="modalBody" class="modal-body">
                <div class="d-flex justify-content-center align-items-center">
                    <div class="spinner-grow text-primary" style="width: 3rem; height: 3rem;" role="status">
                        <span class="sr-only"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        // Open modal dialog
        $(document).on('click', '.open-modal-dialog', function () {
            var btn = $(this);
            var id = btn.data("id");
            var action = btn.data("action");
            var title = btn.data("title");

            $('#modalDialogTitle').html(title);
            $('#modalDialog').modal('toggle');

            $.ajax({
                url: "/Settings/LicenseOrders?handler=" + action,
                type: "Get",
                data: { orderId: id },
                async: true,
                success: function (response) {
                    $("#modalBody").html(response);
                }
            });
        });

        // Clear content on modal hide
        $('#modalDialog').on('hidden.bs.modal', function (e) {
            $("#modalBody").html("<div class='d-flex justify-content-center align-items-center'><div class='spinner-grow text-primary' style='width: 3rem; height: 3rem;' role='status'><span class='sr-only'></span></div></div>");
        })

        InitLicenseOrdersDT();
        LicenseOrdersSetBreadcrumbs();
    </script>
    <partial name="_ValidationScriptsPartial" />
}