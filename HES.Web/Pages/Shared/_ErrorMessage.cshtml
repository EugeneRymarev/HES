@model string

@if (!String.IsNullOrEmpty(Model))
{
    <div class="alert alert-danger alert-dismissible shadow" role="alert" style="position:absolute; left:50%; top:50%; transform: translate(-50%, -50%); width:380px;">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="alert-heading">Error</h4>
        <hr>
        <div class="mb-2">
            @Model
        </div>
    </div>
}