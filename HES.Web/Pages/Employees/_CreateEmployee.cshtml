@model HES.Web.Pages.Employees.IndexModel

<div class="wizard-header mb-3">
    <div class="wizard wizard-horizontal wizard-label-vertical wizard-circle">
        <div id="wizard_profile" class="wizard-item wizard-item-process">
            <div class="wizard-item-tail"></div>
            <div class="wizard-item-icon">
                <span class="wizard-icon">
                    <span class="wizard-icon-circle">
                    </span>
                </span>
            </div>
            <div class="wizard-item-content">
                <div class="wizard-item-title">Profile</div>
            </div>
        </div>
        <div id="wizard_devices" class="wizard-item wizard-item-wait">
            <div class="wizard-item-tail"></div>
            <div class="wizard-item-icon">
                <span class="wizard-icon">
                    <span class="wizard-icon-circle">
                    </span>
                </span>
            </div>
            <div class="wizard-item-content">
                <div class="wizard-item-title">Device</div>
            </div>
        </div>
        <div id="wizard_workstation_account" class="wizard-item wizard-item-wait">
            <div class="wizard-item-tail"></div>
            <div class="wizard-item-icon">
                <span class="wizard-icon">
                    <span class="wizard-icon-circle">
                    </span>
                </span>
            </div>
            <div class="wizard-item-content">
                <div class="wizard-item-title">Windows Account</div>
            </div>
        </div>
        <div id="wizard_overview" class="wizard-item wizard-item-wait">
            <div class="wizard-item-tail"></div>
            <div class="wizard-item-icon">
                <span class="wizard-icon">
                    <span class="wizard-icon-circle">
                    </span>
                </span>
            </div>
            <div class="wizard-item-content">
                <div class="wizard-item-title">Overview</div>
            </div>
        </div>
    </div>
</div>

<form id="employeeForm" method="post" asp-page-handler="CreateEmployee">
    <!-- Employee -->
    <div id="profileTab" class="wizard-tab">
        <div class="row">
            <div class="form-group col">
                <label asp-for="Employee.FirstName" class="control-label text-gray"></label>
                <input id="employee_first_name" asp-for="Employee.FirstName" class="form-control text-navyblue" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Employee.LastName" class="control-label text-gray"></label>
                <input id="employee_last_name" asp-for="Employee.LastName" class="form-control text-navyblue" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="Employee.Email" class="control-label text-gray"></label>
                <input asp-for="Employee.Email" class="form-control text-navyblue" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Employee.PhoneNumber" class="control-label text-gray"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control text-navyblue" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="Employee.Department.CompanyId" class="control-label text-gray"></label>
                <div class="d-flex">
                    <select id="companies" onchange="GetDepartment(this.value)" class="form-control text-navyblue" asp-items="ViewBag.CompanyIdList"></select>
                    <button type="button" class="btn btn-success btn-add open-second-modal-dialog" data-id="" data-action="CreateCompany" data-title="Create company">
                        <img src="~/svg/action/add.svg" />
                    </button>
                </div>
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label asp-for="Employee.DepartmentId" class="control-label text-gray"></label>
                <div class="d-flex">
                    <select id="departments" asp-for="Employee.DepartmentId" class="form-control text-navyblue"></select>
                    <button id="add_position_btn" type="button" class="btn btn-success btn-add open-second-modal-dialog" data-id="" data-action="CreateDepartment" data-title="Create department">
                        <img src="~/svg/action/add.svg" />
                    </button>
                </div>
                <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col">
                <label asp-for="Employee.PositionId" class="control-label text-gray"></label>
                <div class="d-flex">
                    <select id="positions" asp-for="Employee.PositionId" class="form-control text-navyblue" asp-items="@ViewBag.PositionIdList"></select>
                    <button type="button" class="btn btn-success btn-add open-second-modal-dialog" data-id="" data-action="CreatePosition" data-title="Create position">
                        <img src="~/svg/action/add.svg" />
                    </button>
                </div>
                <span asp-validation-for="Employee.PositionId" class="text-danger"></span>
            </div>
            <div class="col"></div>
        </div>
    </div>
    <!-- Device -->
    <div id="deviceTab" class="wizard-tab d-none">
        <input id="skipDevice" type="hidden" asp-for="Wizard.SkipDevice" value="false" />
        <input id="skipProximityUnlock" type="hidden" asp-for="Wizard.SkipProximityUnlock" value="true">
        <div class="row justify-content-center">
            <div class="form-group col-4">
                <label class="control-label">Device</label>
                <select id="deviceId" class="form-control" asp-for="Wizard.DeviceId" asp-items="ViewBag.DeviceIdList"></select>
            </div>
        </div>
        <div class="row justify-content-center" id="proximity_group">
            <div class="form-group col-3">
                <label class="control-label">Proximity unlock</label>
            </div>
            <div class="form-group col-1">
                <div class="custom-control custom-switch">
                    <input type="checkbox" class="custom-control-input" id="proximitySwitch">
                    <label class="custom-control-label" for="proximitySwitch"></label>
                </div>
            </div>
        </div>
        <div class="row justify-content-center d-none" id="workstation_group">
            <div class="form-group col-4">
                <label class="control-label">Select the workstation for proximity unlock</label>
                <select id="workstationId" class="form-control" asp-for="Wizard.WorkstationId" asp-items="ViewBag.WorkstationIdList"></select>
            </div>
        </div>
    </div>
    <!-- Workstation Account -->
    <div id="workstationAccountTab" class="wizard-tab d-none">
        <input id="skipWorkstationAccount" type="hidden" asp-for="Wizard.WorkstationAccount.Skip" value="false" />
        <ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab-accounts" role="tablist">
            <li class="nav-item">
                <a class="nav-link active ws-account-nav" id="pills-personal-tab" data-toggle="pill" href="#pills-personal" role="tab">Personal account</a>
            </li>
            <li class="nav-item">
                <a class="nav-link ws-account-nav" id="pills-shared-tab" data-toggle="pill" href="#pills-shared" role="tab">Shared account</a>
            </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade show active" id="pills-personal" role="tabpanel">
                <input id="accountName" type="hidden" asp-for="Wizard.WorkstationAccount.Name" value="Windows Account" />
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="Wizard.WorkstationAccount.AccountType" class="text-gray"></label>
                        <select id="workstation_account_type" asp-for="Wizard.WorkstationAccount.AccountType" class="form-control" asp-items="ViewBag.WorkstationAccountTypeList"></select>
                    </div>
                    <div id="domain_group" class="form-group col invisible">
                        <label asp-for="Wizard.WorkstationAccount.Domain" class="text-gray"></label>
                        <input id="domain" asp-for="Wizard.WorkstationAccount.Domain" class="form-control text-navyblue" value="local" autocomplete="new-password" />
                        <span asp-validation-for="Wizard.WorkstationAccount.Domain" class="text-danger"></span>
                    </div>
                    <div class="col"></div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="Wizard.WorkstationAccount.Login" class="text-gray"></label>
                        <input id="login" asp-for="Wizard.WorkstationAccount.Login" class="form-control text-navyblue" autocomplete="new-password" />
                        <span asp-validation-for="Wizard.WorkstationAccount.Login" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Wizard.WorkstationAccount.Password" class="text-gray"></label>
                        <input id="password" asp-for="Wizard.WorkstationAccount.Password" class="form-control text-navyblue" autocomplete="new-password" />
                        <span asp-validation-for="Wizard.WorkstationAccount.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group col">
                        <label asp-for="Wizard.WorkstationAccount.ConfirmPassword" class="text-gray"></label>
                        <input id="confirmPassword" asp-for="Wizard.WorkstationAccount.ConfirmPassword" class="form-control text-navyblue" autocomplete="new-password" />
                        <span asp-validation-for="Wizard.WorkstationAccount.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="pills-shared" role="tabpanel">
                <div class="form-group col" style="max-width:350px; position:relative;left:50%;transform:translateX(-50%);">
                    <label class="text-gray">Workstation Accounts</label>
                    <select id="workstation_accounts" class="form-control" asp-items="ViewBag.WorkstationAccountsList"></select>
                </div>
            </div>
        </div>
    </div>
    <!-- Overview -->
    <div id="overviewTab" class="wizard-tab d-none">
        <div class="row">
            <!-- Employee -->
            <div class="col">
                <h4 class="mx-2 text-navyblue">Employee</h4>
                <div class="border rounded py-2 px-3">
                    <div class="font-weight-bold">Full Name</div>
                    <div id="overview_emp_fullname" class="text-break"></div>
                    <div class="font-weight-bold">Company</div>
                    <div id="overview_emp_company"></div>
                    <div class="font-weight-bold">Department</div>
                    <div id="overview_emp_department"></div>
                    <div class="font-weight-bold">Position</div>
                    <div id="overview_emp_position"></div>
                </div>
            </div>
            <!-- Device -->
            <div class="col">
                <h4 class="mx-2 text-navyblue">Device</h4>
                <div class="border rounded py-2 px-3">
                    <div id="overview_device_sn" class="font-weight-bold">Serial number</div>
                    <div id="overview_device"></div>
                    <div id="overview_workstation_title" class="font-weight-bold invisible">Proximity unlock</div>
                    <div id="overview_workstation" class="invisible"></div>
                </div>
            </div>
            <!-- Account -->
            <div class="col">
                <h4 class="mx-2 text-navyblue">Windows Account</h4>
                <div class="border rounded py-2 px-3">
                    <div id="overview_user_name" class="font-weight-bold">User name</div>
                    <div id="overview_login"></div>
                    <div id="overview_domain_title" class="font-weight-bold invisible">Domain</div>
                    <div id="overview_domain" class="invisible"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- Navigation Buttons -->
    <div class="text-right">
        <button type="button" id="skipBtn" class="btn btn-light mr-3 d-none" onclick="SkipTab()">Skip</button>
        <button type="button" id="backBtn" class="btn btn-secondary d-none" onclick="BackTab()">Back</button>
        <button type="button" id="nextBtn" class="btn btn-primary" onclick="NextTab()">Next</button>
    </div>
</form>
<script>
    var currentTab = 0;
    var repeatCount = 1;

    function NextTab(skip = false) {
        // Validation
        var valid = false;
        if (skip) {
            valid = true;
        } else {
            valid = $("#employeeForm").valid();
        }

        if (!valid) {
            return false;
        }

        // All tabs
        var tabs = $('.wizard-tab');

        if (currentTab < tabs.length - 1) {
            // Change tab
            for (var i = 0; i < repeatCount; i++) {
                tabs.eq(currentTab).addClass("d-none"); // Current tab
                tabs.eq(++currentTab).removeClass("d-none"); // Next tab

                // Switch tabs
                switch (currentTab) {
                    case 0:
                        // Never get here
                        break;
                    case 1:
                        // Indicator
                        $('#wizard_profile').removeClass("wizard-item-process");
                        $('#wizard_profile').addClass("wizard-item-finish");
                        $('#wizard_devices').removeClass("wizard-item-wait");
                        $('#wizard_devices').addClass("wizard-item-process");
                        // Buttons
                        $("#backBtn").removeClass("d-none");
                        $("#skipBtn").removeClass("d-none");
                        break;
                    case 2:
                        // Indicator
                        $('#wizard_devices').removeClass("wizard-item-process");
                        $('#wizard_devices').addClass("wizard-item-finish");
                        $('#wizard_workstation_account').removeClass("wizard-item-wait");
                        $('#wizard_workstation_account').addClass("wizard-item-process");
                        break;
                    case 3:
                        // Indicator
                        $('#wizard_workstation_account').removeClass("wizard-item-process");
                        $('#wizard_workstation_account').addClass("wizard-item-finish");
                        $('#wizard_overview').addClass("wizard-item-process");
                        // Buttons
                        $("#skipBtn").addClass("d-none");
                        $('#nextBtn').html("Create");

                        //Employee
                        $('#overview_emp_fullname').html($('#employee_first_name').val() + ' ' + $('#employee_last_name').val());
                        $('#overview_emp_company').html($("#companies option:selected").text());
                        $('#overview_emp_department').html($("#departments option:selected").text());
                        $('#overview_emp_position').html($("#positions option:selected").text());

                        // Device
                        var skipDevice = $('#skipDevice').attr("value");
                        if (skipDevice == 'true') {
                            $('#overview_device_sn').text("Skipped");
                            $('#overview_device').html("");
                            $('#overview_workstation').addClass('invisible');
                            $('#overview_workstation_title').addClass('invisible');
                        }
                        else {
                            $('#overview_device_sn').text("Serial number");
                            $('#overview_device').html($("#deviceId option:selected").text());
                            if ($('#proximitySwitch').prop('checked')) {
                                var workstation = $("#workstationId option:selected").text();
                                $('#overview_workstation').html(workstation);
                                $('#overview_workstation').removeClass('invisible');
                                $('#overview_workstation_title').removeClass('invisible');
                            }
                            else {
                                $('#overview_workstation').addClass('invisible');
                                $('#overview_workstation_title').addClass('invisible');
                            }
                        }


                        // Account
                        var skipWorkstationAccount = $('#skipWorkstationAccount').attr("value");
                        if (skipWorkstationAccount == 'true') {
                            $('#overview_user_name').text("Skipped");
                            $('#overview_login').html("");
                            $('#overview_domain_title').addClass('invisible');
                            $('#overview_domain').addClass('invisible');
                        }
                        else {
                            $('#overview_user_name').text("User Name");
                            $('#overview_login').html($("#login").val());
                            var type = $("#workstation_account_type option:selected").text();
                            var domain = $("#domain").val();
                            if (type === 'Domain') {
                                $('#overview_domain').html(domain);
                                $('#overview_domain_title').removeClass('invisible');
                                $('#overview_domain').removeClass('invisible');
                            }
                            else {
                                $('#overview_domain_title').addClass('invisible');
                                $('#overview_domain').addClass('invisible');
                            }
                        }
                        break;
                }
            }
        }
        else {
            // If last tab submit form
            $("#employeeForm").submit();
        }
    }

    function BackTab() {
        // All tabs
        var tabs = $('.wizard-tab');

        // Change tab
        for (var i = 0; i < repeatCount; i++) {
            tabs.eq(currentTab).addClass("d-none"); // Current tab
            tabs.eq(--currentTab).removeClass("d-none"); // Previous tab

            // Switch tabs
            switch (currentTab) {
                case 0:
                    // Indicator
                    $('#wizard_profile').removeClass("wizard-item-finish");
                    $('#wizard_profile').addClass("wizard-item-process");
                    $('#wizard_devices').removeClass("wizard-item-process");
                    $('#wizard_devices').addClass("wizard-item-wait");
                    // Buttons
                    $("#backBtn").addClass("d-none");
                    $("#skipBtn").addClass("d-none");
                    break;
                case 1:
                    // Indicator
                    $('#wizard_devices').removeClass("wizard-item-finish");
                    $('#wizard_devices').addClass("wizard-item-process");
                    $('#wizard_workstation_account').removeClass("wizard-item-process");
                    $('#wizard_workstation_account').addClass("wizard-item-wait");
                    // Return repeat count to default
                    repeatCount = 1;
                    // Remove skip
                    $('#skipDevice').val(false);
                    break;
                case 2:
                    // Indicator
                    $('#wizard_workstation_account').removeClass("wizard-item-finish");
                    $('#wizard_workstation_account').addClass("wizard-item-process");
                    $('#wizard_overview').removeClass("wizard-item-process");
                    $('#wizard_overview').addClass("wizard-item-wait");
                    // Buttons
                    $("#skipBtn").removeClass("d-none");
                    $('#nextBtn').html("Next");
                    // Remove skip
                    $('#skipWorkstationAccount').val(false);
                    break;
                case 3:
                    // Never get here
                    break;
            }
        }
    }

    function SkipTab() {
        if (currentTab == 1) {
            repeatCount = 2;
            // Set skip
            $('#skipDevice').val(true);
            $('#skipWorkstationAccount').val(true);
        }

        if (currentTab == 2) {
            // Set skip
            $('#skipWorkstationAccount').val(true);
        }

        NextTab(true);
    }

    $(document).on('click', '#proximitySwitch', function () {
        if (this.checked) {
            $('#workstation_group').removeClass('d-none');
            $('#skipProximityUnlock').val(false);
        }
        else {
            $('#workstation_group').addClass('d-none');
            $('#skipProximityUnlock').val(true);
        }
    });

    $(document).on('change', '#workstation_account_type', function () {
        switch (this.value) {
            case '0':
                $('#domain_group').addClass('invisible');
                $('#domain').val('local');
                break;
            case '1':
                $('#domain_group').removeClass('invisible');
                $('#domain').val('');
                break;
            case '2':
                $('#domain_group').addClass('invisible');
                $('#domain').val('ms');
                break;
        }
    });

    $('.ws-account-nav').on('shown.bs.tab', function (e) {
        switch (e.target.id) {
            case "pills-personal-tab":
                $('#accountName').val("Windows Account");
                $('#workstation_account_type').val("0");
                $('#login').val("");
                $('#domain').val("local");
                $('#password').val("");
                $('#confirmPassword').val("");
                break;
            case "pills-shared-tab":
                $('#workstation_accounts').change();
                break;
        }
    });

    $(document).on('change', '#workstation_accounts', function () {
        $.getJSON('/Employees?handler=JsonWorkstationSharedAccounts', { id: this.value },
            function (data) {
                $(data).each(function () {
                    $('#accountName').val(this.name);
                    $('#workstation_account_type').val(this.accountType);
                    $('#login').val(this.login);
                    $('#domain').val(this.domain);
                    $('#password').val(this.password);
                    $('#confirmPassword').val(this.confirmPassword);
                });
            });
    });

    if ($('#workstation_accounts > option').length === 0) {
        $('#pills-tab-accounts').addClass('d-none');
    }

    if ($('#workstationId > option').length === 0) {
        $('#proximity_group').addClass('d-none');
    }
</script>