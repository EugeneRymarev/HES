@inherits HESComponentBase

@if (Employee == null)
{
    <LoadingText />
}
else
{

    <h5 class="text-gray mb-4 text-break">Are you sure you want to enable SSO for @Employee.FullName?</h5>

    <div class="text-end mt-2">
        <button type="button" class="btn btn-secondary" @onclick="ModalDialogService.CancelAsync">Cancel</button>
        <ButtonSpinner Text="Enable" Class="btn btn-primary" Callback="EnableEmployeeSsoAsync" />
    </div>
}