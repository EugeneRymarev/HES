                                <ValidationMessage For="@(() => WorkstationMicrosoft.UserName)" class="text-danger" />
                            </div>
                            <div class="form-group col col-sm-6 offset-md-3">
                                <label class="control-label text-gray">Password</label>
                                <InputText @bind-Value="WorkstationMicrosoft.Password" class="form-control text-navyblue" />
                                <ValidationMessage For="@(() => WorkstationMicrosoft.Password)" class="text-danger" />
                            </div>
                            <div class="form-group col col-sm-6 offset-md-3">
                                <label class="control-label text-gray">Confirm Password</label>
                                <InputText @bind-Value="WorkstationMicrosoft.ConfirmPassword" class="form-control text-navyblue" />
                                <ValidationMessage For="@(() => WorkstationMicrosoft.ConfirmPassword)" class="text-danger" />
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="button" class="btn btn-secondary" @onclick="@(async () => await CloseAsync())">Cancel</button>
                            <button type="submit" class="btn btn-primary">
                                <span class="spinner-border spinner-border-sm @(_isBusy == true ? null : "d-none")" role="status" aria-hidden="true"></span>
                                <span>Create</span>
                            </button>
                        </div>
                    </EditForm>
                    break;
                case Core.Models.WorkstationAccountType.AzureAD:
                    <EditForm Model="WorkstationAzureAD" OnValidSubmit="CreateWorkstationAccountAsync">
                        <DataAnnotationsValidator />
                        <div class="row">
                            <div class="form-group col col-sm-6 offset-md-3">
                                <label class="control-label text-gray">Account Name</label>
                                <InputText @bind-Value="WorkstationAzureAD.Name" class="form-control text-navyblue" />
                                <ValidationMessage For="@(() => WorkstationAzureAD.Name)" class="text-danger" />
                            </div>
                            <div class="form-group col col-sm-6 offset-md-3">
                                <label class="control-label text-gray">User Logon Name</label>
                                <InputText @bind-Value="WorkstationAzureAD.UserName" class="form-control text-navyblue" />
                                <ValidationMessage For="@(() => WorkstationAzureAD.UserName)" class="text-danger" />
                            </div>
                            <div class="form-group col col-sm-6 offset-md-3">
                                <label class="control-label text-gray">Password</label>
                                <InputText @bind-Value="WorkstationAzureAD.Password" class="form-control text-navyblue" />
                                <ValidationMessage For="@(() => WorkstationAzureAD.Password)" class="text-danger" />
                            </div>
                            <div class="form-group col col-sm-6 offset-md-3">
                                <label class="control-label text-gray">Confirm Password</label>
                                <InputText @bind-Value="WorkstationAzureAD.ConfirmPassword" class="form-control text-navyblue" />
                                <ValidationMessage For="@(() => WorkstationAzureAD.ConfirmPassword)" class="text-danger" />
                            </div>
                        </div>
                        <div class="text-right">
                            <button type="button" class="btn btn-secondary" @onclick="@(async () => await CloseAsync())">Cancel</button>
                            <button type="submit" class="btn btn-primary">
                                <span class="spinner-border spinner-border-sm @(_isBusy == true ? null : "d-none")" role="status" aria-hidden="true"></span>
                                <span>Create</span>
                            </button>
                        </div>
                    </EditForm>
                    break;
            }


