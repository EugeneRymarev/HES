                            </div>
                            <div class="form-group col col-sm-6 offset-md-3">
                                <label class="control-label text-gray">User Logon Name</label>
                                <InputText @bind-Value="WorkstationLocal.UserName" class="form-control text-navyblue" />
                                <ValidationMessage For="@(() => WorkstationLocal.UserName)" class="text-danger" />
                            </div>
                            <div class="form-group col col-sm-6 offset-md-3">
