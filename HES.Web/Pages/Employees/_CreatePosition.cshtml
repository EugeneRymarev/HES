@model HES.Web.Pages.Employees.IndexModel

<style>
    .popover-body {
        color: #ff0000;
    }

    .popover {
        left: -75px !important;
    }
</style>

<form id="orgStructureForm" data-action="CreatePosition" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Position.Name" class="control-label text-gray"></label>
        <input asp-for="Position.Name" class="form-control text-navyblue orgstructure-popover" data-container="body" data-toggle="popover" data-placement="bottom" data-content="Position already exists." />
        <span asp-validation-for="Position.Name" class="text-danger"></span>
    </div>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}