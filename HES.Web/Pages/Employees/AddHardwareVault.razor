@if (HardwareVaults == null)
{
    <LoadingTab />
}
else
{
    <TableFilter EnableFilterButton="false" SearchTextChanged="SearchTextChangedAsync" />

    <table class="display table table-hover inside-scrollbar w-100 mt-3">
        <thead>

        </thead>
        <tbody>
            @foreach (var hardwareVault in HardwareVaults)
            {
                <tr class="@(hardwareVault.Id == SelectedHardwareVault?.Id ? "bg-primary": string.Empty)" @onclick="async () => await SelectedItemChangedAsync(hardwareVault)">
                    <td>
                        @hardwareVault.Id
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" @onclick="CloseAsync">Close</button>
        <input type="submit" value="Add" class="btn btn-primary" @onclick="AddVaultAsync" />
    </div>
}