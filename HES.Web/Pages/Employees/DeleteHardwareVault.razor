@if (HardwareVault == null)
{
    <LoadingTab />
}
else
{
    <h5 class="text-gray mb-3 ">You want to remove device @HardwareVault.Id? When removing the device, all accounts associated with the device will be deleted.</h5>
    <div class="form-group">
        <label class="text-gray">Select the reason</label>
        <select @bind="DeletedReason" class="form-control">
            <option valut="@VaultStatusReason.Withdrawal" selected>Withdrawal</option>
            <option valut="@VaultStatusReason.Broken">Broken</option>
        </select>
    </div>
    <div class="text-right mt-2">
        <button type="button" class="btn btn-secondary" @onclick="CancelAsync">Cancel</button>
        <input type="button" value="Delete" @onclick="DeleteVaultAsync" class="btn btn-danger" />
    </div>
}