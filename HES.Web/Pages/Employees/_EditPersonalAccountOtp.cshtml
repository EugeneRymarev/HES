@model HES.Web.Pages.Employees.DetailsModel

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="DeviceAccount.Id" />
    <input type="hidden" asp-for="DeviceAccount.DeviceId" />
    <input type="hidden" asp-for="DeviceAccount.EmployeeId" />
    <input type="hidden" asp-for="DeviceAccount.Name" />
    <input type="hidden" asp-for="DeviceAccount.Login" />
    <div class="form-group">
        <h5 class="text-navyblue">@Model.DeviceAccount.Name</h5>
    </div>
    <div class="form-group">
        <label asp-for="Input.OtpSecret" class="text-gray"></label>
        <input asp-for="Input.OtpSecret" class="form-control text-navyblue" />
    </div>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="EditPersonalAccountOtp" />
    </div>
</form>