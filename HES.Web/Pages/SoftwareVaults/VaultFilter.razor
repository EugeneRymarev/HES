@if (!Initialized)
{
    <LoadingText />
}
else
{
    <EditForm Model="Filter" OnValidSubmit="FilterdAsync">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">OS</label>
                <select id="filterOS" @bind="Filter.OS" class="form-control">
                    <option selected></option>
                    @foreach (var item in OSList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Model</label>
                <select id="filterModel" @bind="Filter.Model" class="form-control">
                    <option selected></option>
                    @foreach (var item in ModelList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Version</label>
                <select id="filterClientAppVersion" @bind="Filter.ClientAppVersion" class="form-control">
                    <option selected></option>
                    @foreach (var item in ClientAppVersionList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Status</label>
                <select id="filterStatus" @bind="Filter.Status" class="form-control">
                    <option selected></option>
                    @foreach (var item in StatusList)
                    {
                        <option value="@item.Text">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">LicenseStatus</label>
                <select id="filterLicenseStatus" @bind="Filter.LicenseStatus" class="form-control">
                    <option selected></option>
                    @foreach (var item in LicenseStatusList)
                    {
                        <option value="@item.Text">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Employee</label>
                <select id="filterEmployee" @bind="Filter.EmployeeId" class="form-control">
                    <option selected></option>
                    @foreach (var item in EmployeeList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Company</label>
                <select id="filterCompany" @onchange="CompanyChangedAsync" class="form-control">
                    <option selected></option>
                    @foreach (var item in CompanyList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col-sm-6 col-md-4 col-lg-3 col-xl-2 form-group">
                <label class="mb-0 text-gray">Department</label>
                <select id="filterDepartment" @bind="Filter.DepartmentId" class="form-control" disabled="@(DepartmentList.Count() == 0 ? true : false)" title="@(DepartmentList.Count() == 0 ? "Choose a company" : null)">
                    <option selected></option>
                    @foreach (var item in DepartmentList)
                    {
                        <option value="@item.Value">@item.Text</option>
                    }
                </select>
            </div>
            <div class="col align-self-end text-right form-group">
                <button id="clearFilter" type="button" class="btn btn-secondary" @onclick="ClearAsync">Clear</button>
                <input id="filterBtn" type="submit" value="Filter" class="btn btn-primary" />
            </div>
        </div>
    </EditForm>
}