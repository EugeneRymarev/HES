@page
@model HES.Web.Pages.StatusCodeModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HES - @Model.ErrorStatusCode </title>
</head>
<body>
    <style>
        *,
        *::before,
        *::after {
            box-sizing: border-box;
        }

        html {
            height: 100%;
        }

        body {
            margin: 0;
            padding: 0;
            height: 100%;
            background: #F7F8FC;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #212529;
        }

        .wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100%;
            width: 100%;
        }

        .card {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        .code {
            text-align: center !important;
            font-size: 60px;
            margin-top: 0;
            margin-bottom: 0.5rem;
        }

        .description {
            text-align: center !important;
            margin-top: 0;
            margin-bottom: 0.5rem;
        }

        .link {
        }
    </style>
    <div class="wrapper">
        <div class="card">
            <h1 class="code">@Model.ErrorStatusCode</h1>
            <h2 class="description">@Model.ErrorDescription</h2>
        </div>
    </div>
</body>
</html>
