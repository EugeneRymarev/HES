@page "/RedirectToManage/"
@page "/RedirectToManage/{Page}"
@inject NavigationManager Navigation
@code {
    [Parameter] public string Page { get; set; }

    protected override void OnInitialized()
    {
        if (Page != null)
        {
            Navigation.NavigateTo($"/Identity/Account/Manage/{Page}", false);
        }
        else
        {
            Navigation.NavigateTo($"/Identity/Account/Manage/", false);
        }
    }
}