@inject NavigationManager NavigationManager

<div class="d-flex justify-content-center align-items-center" style="position: fixed; top: 0; left: 0; z-index: 1040; width: 100vw; height: 100vh; background-color: #FFF;">
    <div class="spinner-grow text-primary" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>

@code {

    protected override void OnInitialized()
    {
        NavigationManager.NavigateTo($"Identity/Account/Login?returnUrl=" +
            $"/{Uri.EscapeDataString(NavigationManager.ToBaseRelativePath(NavigationManager.Uri))}", true);
    }
}