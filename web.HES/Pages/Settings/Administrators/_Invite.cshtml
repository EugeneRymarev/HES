@model web.HES.Pages.Settings.Administrators.IndexModel

<form method="post">
    <div class="form-group mb-4">
        <label class="text-gray" asp-for="Input.Email"></label>
        <input asp-for="Input.Email" class="form-control text-navyblue" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Invite" class="btn btn-primary" asp-page-handler="InviteAdmin" />
    </div>
</form>