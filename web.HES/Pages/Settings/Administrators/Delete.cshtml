@page
@model web.HES.Pages.Settings.Administrators.DeleteModel

@{
    ViewData["Title"] = "Delete";
    ViewData["ActivePage"] = ManageNavPages.Settings;
    ViewData["SettingsPage"] = SettingsNavPages.Administrators;
}

<h1 class="text-navyblue">Delete</h1>
<h3 class="text-gray">Are you sure you want to delete this?</h3>

<div class="custom-wide-card">
    <div class="row">
        <div class="col-12 col-sm-6">
            <div class="form-group">
                <label asp-for="ApplicationUser.Email" class="control-label text-gray"></label>
                <input asp-for="ApplicationUser.Email" class="form-control text-navyblue" disabled />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="ApplicationUser.PhoneNumber" class="control-label text-gray"></label>
                <input asp-for="ApplicationUser.PhoneNumber" class="form-control text-navyblue" disabled />
            </div>
        </div>
    </div>
    <form method="post">
        <input type="hidden" asp-for="ApplicationUser.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-outline-secondary" asp-page="./Index">Cancel</a>
    </form>
</div>