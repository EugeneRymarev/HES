@model web.HES.Pages.Settings.OrgStructure.IndexModel

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Department.Id" name="id"/>
    <div class="form-group">
        <label asp-for="Department.CompanyId" class="control-label text-gray"></label>
        <select asp-for="Department.CompanyId" class="form-control text-navyblue" asp-items="ViewBag.CompanyId"></select>
        <span asp-validation-for="Department.CompanyId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Department.Name" class="control-label text-gray"></label>
        <input asp-for="Department.Name" class="form-control text-navyblue" />
        <span asp-validation-for="Department.Name" class="text-danger"></span>
    </div>
    <div class="form-group m-0 text-right">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <input type="submit" value="Save" class="btn btn-primary" asp-page-handler="EditDepartment" />
    </div>
</form>