@page
@model web.HES.Pages.Settings.Positions.CreateModel

@{
    ViewData["Title"] = "Create";
    ViewData["ActivePage"] = ManageNavPages.Settings;
    ViewData["SettingsPage"] = SettingsNavPages.Positions;
}

<h1 class="text-navyblue">Create position</h1>

<div class="custom-wide-card">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Position.Name" class="control-label text-gray"></label>
            <input asp-for="Position.Name" class="form-control text-navyblue" />
            <span asp-validation-for="Position.Name" class="text-danger"></span>
        </div>
        <div class="form-group m-0">
            <input type="submit" value="Create" class="btn btn-primary" />
            <a class="btn btn-outline-secondary" asp-page="Index">Back</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
