@page
@model web.HES.Pages.Devices.IndexModel

@{
    ViewData["Title"] = "Devices";
    ViewData["ActivePage"] = ManageNavPages.Devices;
}

<div class="row align-items-center">
    <div class="col">
        <h1 class="text-navyblue">Devices</h1>
    </div>
    <div class="col-auto p-1">
        <div class="form-group m-0 has-search">
            <img class="form-control-feedback" src="~/svg/action/search.svg" />
            <input id="searchbox" type="text" class="form-control" placeholder="Search">
        </div>
    </div>
    <div class="col-auto p-1">
        <a class="btn btn-primary" asp-page="Import">Import</a>
    </div>
</div>

<div class="table-responsive">
    <table id="devices" class="display table table-hover border rounded" style="width:100%">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].MAC)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].RFID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].Battery)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].Firmware)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].LastSynced)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Device[0].Employee)
                </th>
                <th class="table-col-menu"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Device)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MAC)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Model)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RFID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Battery)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firmware)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastSynced)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Employee.FullName)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@* Bottom table items *@
<div class="row mt-2">
    <div class="col-sm-12 col-md-auto d-flex justify-content-start align-items-center mb-1">
        <span class="d-flex align-items-center mr-1 text-navyblue">Show entries</span>
        <div id="newEntriesPlace"></div>
    </div>
    <div id="newShowingPlace" class="col-sm-12 col-md d-flex justify-content-md-center align-items-center mb-1 text-navyblue"></div>
    <div id="newPaginationPlace" class="col-sm-12 col-md-auto d-flex justify-content-md-end align-items-center mb-1"></div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            // Init DT
            $('#devices').DataTable({
                "columnDefs": [
                    { "orderable": false, "targets": 8 }
                ]
            });
            // Override search box
            $('.dataTables_filter').addClass('d-none');
            var dataTable = $('#devices').dataTable();
            $('#searchbox').keyup(function () {
                dataTable.fnFilter(this.value);
            });
            // Length
            $('#devices_length').addClass('d-none');
            $('#newEntriesPlace').html($('.dataTables_length select').removeClass('custom-select-sm form-control-sm'));
            // Info
            $('#newShowingPlace').html($('.dataTables_info'));
            // Paginate
            $('#newPaginationPlace').html($('.dataTables_paginate'));


            //$('.table-responsive').on('show.bs.dropdown', function () {
            //    $('.table-responsive').css("overflow", "visible");
            //});

            //$('.table-responsive').on('hide.bs.dropdown', function () {
            //    $('.table-responsive').css("overflow", "auto");
            //})

        });       
    </script>
}