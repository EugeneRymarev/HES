@page
@model web.HES.Pages.Devices.ImportModel
@{
    ViewData["Title"] = "Import";
    ViewData["ActivePage"] = ManageNavPages.Devices;
}

<h1>Import devices</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Input.FileToUpload"></label>
                <input asp-for="Input.FileToUpload" type="file" class="form-control" />
                <span asp-validation-for="Input.FileToUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Import" class="btn btn-primary" />
            </div>
        </form>
        <h5>Status: @Model.UploadResult</h5>
    </div>
</div>